{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}

{% block main %}
    {% for product in products %}
        <article class="post">
            <h2>
                <a href="{{ path('blog_product', {slug: product.slug}) }}">
                    {{ product.title }}
                </a>
            </h2>

            <p class="post-metadata">
                <span class="metadata"><i class="fa fa-calendar"></i> {{ product.publishedAt|localizeddate('long', 'medium', null, 'UTC') }}</span>
                <span class="metadata"><i class="fa fa-user"></i> {{ product.author.fullName }}</span>
            </p>

            {{ product.summary|md2html }}

            {{ include('blog/_product_tags.html.twig') }}
        </article>
    {% else %}
        <div class="well">{{ 'post.no_posts_found'|trans }}</div>
    {% endfor %}

    {% if products.haveToPaginate %}
        <div class="navigation text-center">
            {{ pagerfanta(products, 'twitter_bootstrap3_translated', {routeName: 'blog_index_paginated'}) }}
        </div>
    {% endif %}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {#show_source_code(_self)#}
    {# include('blog/_rss.html.twig') #}
{% endblock %}
