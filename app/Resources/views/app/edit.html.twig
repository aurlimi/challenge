{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}
    {% block main %}
        <ul>
            <li>
                <a href="{{ path('app_index') }}">Back to the list</a>
            </li>
        </ul>
    <h1>Modification Commande </h1>
    <div id="edit_commande">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <button type="submit" {{ button_css|default("btn btn-primary") }}>
            <i class="fa fa-save" aria-hidden="true"></i>Modifier
        </button>
        {{ form_end(edit_form) }}
    </div>

  {% endblock %}

{% block sidebar %}
        <div class="section actions">
            <a href="{{ path('app_commande_new') }}" class="btn btn-lg btn-block btn-success">
                <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_commande'|trans }}
            </a>
            <div class="section">
                {{ include('app/_delete_form.html.twig', {commande: commande}, with_context = false) }}
            </div>

        </div>
        {{ parent() }}

{% endblock %}