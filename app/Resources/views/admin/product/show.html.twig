{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_show' %}

{% block main %}
    <h1>{{ product.title }}</h1>

    <p class="post-metadata">
        <span class="metadata"><i class="fa fa-calendar"></i> </span>
        <span class="metadata"><i class="fa fa-user"></i></span>
    </p>

    <div class="well">
        <p class="m-b-0"><strong>{{ 'label.summary'|trans }}</strong>: {{ product.description }}</p>
    </div>


{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_product_edit', {id: product.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('admin/product/_delete_form.html.twig', {product: product}, with_context = false) }}
    </div>

    {{ parent() }}


{% endblock %}
